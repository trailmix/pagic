{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "build: watch and serve",
      "request": "launch",
      "runtimeExecutable": "deno",
      "env": {
        "LOG_LEVEL": "DEBUG"
      },
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect",
        "-A",
        "mod.ts",
        "build",
        "--serve",
        "--port",
        "8000",
        "--watch"
      ],
      "port": 9229,
      "type": "node",
      "outputCapture": "std"
    },
    {
      "name": "init: theme",
      "request": "launch",
      "runtimeExecutable": "deno",
      "env": {
        "LOG_LEVEL": "DEBUG"
      },
      "runtimeArgs": ["run", "--unstable", "--inspect", "-A", "mod.ts", "init", "--theme"],
      "port": 9229,
      "type": "node",
      "outputCapture": "std"
    },
    {
      "name": "init: site",
      "request": "launch",
      "runtimeExecutable": "deno",
      "env": {
        "LOG_LEVEL": "DEBUG"
      },
      "runtimeArgs": ["run", "--unstable", "--inspect", "-A", "mod.ts", "init", "--site"],
      "port": 9229,
      "type": "node",
      "outputCapture": "std"
    },
    {
      "name": "test: test_",
      "request": "launch",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--unstable",
        "--inspect",
        "-A",
        "--import-map=import_map.json",
        "src/tests/PagicLogger_test.ts"
      ],
      "attachSimplePort": 9229,
      "type": "pwa-node",
      "outputCapture": "std"
    }
  ]
}
